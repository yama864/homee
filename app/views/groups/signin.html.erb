<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Familyグループに参加！
    </h1>
  </div>
</div>
<%= form_with model: @group, url: signinmove_groups_path, class: 'registration-main', local: true do |f| %>
  <p id="alert"><%= alert %></p>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Familyグループ名</label>
      <span class="indispensable"></span>
    </div>
    <%= f.text_area :group_name, class:"input-default", id:"group_name", placeholder:"◯◯ファミリー", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable"></span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class='register-btn'>
    <%= f.submit "ルームに参加！" ,class:"register-red-btn" %>
  </div>
<% end %>