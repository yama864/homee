<div class="row">
  <%= form_with model: @event, url: group_event_path, class: 'registration-main', local: true do |f| %>
    <%= render 'devise/shared/error_messages', resource: @event, object: f.object%>
    <div class='form-group'>
      <div class= 'form-text-wrap'>
        <%= f.label :person, "誰の？", {class:'form-text'}%>
        <%= f.text_field :person, class:'input-default' %>
      </div>
    </div>
    <div class='form-group'>
      <div class= 'form-text-wrap'>
        <%= f.label :title, "予定", {class:'form-text'}%>
        <%= f.text_field :title, class:'input-default' %> 
      </div>
    </div>
    <div class="form-group">
      <div class= 'form-text-wrap'>
        <%= f.label :start,"開始時刻", {class:'form-text'}%>
        <%= f.datetime_select :start, {
        default: Date.today + 0.hours + 00.minutes,
        use_month_numbers: true,
        minute_step: 30
        }, class: 'input-time' %>
      </div>
    </div>
    <br>
    <div class="form-group"> 
      <div class= 'form-text-wrap'>
        <%= f.label :end,"終了時刻", {class:'form-text'}%>
        <%= f.datetime_select :end, {default: Date.today + 0.hours + 00.minutes, use_month_numbers: true, minute_step: 30}, class: 'input-time' %>
      </div>
    </div>
    <div class='register-btn'>
      <%= f.submit "再登録",   class: "register-red-btn" %>
    </div>
  <% end %>
</div>