<div class="row">
      <%= form_with model: @event, url: group_event_path, class: 'registration-main', local: true do |f| %>
        <%= render 'devise/shared/error_messages', resource: @event, object: f.object%>

        <%= f.label :person, "誰の？"%>
        <%= f.text_field :person, class:'form-control mb-3' %>

        <%= f.label :title, "予定"%>
        <%= f.text_field :title, class:'form-control mb-3' %> 

        <div class="form-inline text-left">
         <%= f.label :start,"開始時刻", {class:'control-label'}%>
         <%= f.datetime_select :start, {
           default: Date.today + 0.hours + 00.minutes,
           use_month_numbers: true,
           minute_step: 30
           }, class: 'form-control' %>
        </div>
         <br>
        <div class="form-inline text-left"> 
         <%= f.label :end,"終了時刻", {class:'control-label'}%>
         <%= f.datetime_select :end, {default: Date.today + 0.hours + 00.minutes, use_month_numbers: true, minute_step: 30}, class: 'form-control' %>
        </div>
         <%# 自動入力をするためにはdatetime_selectにしておく必要があります %>

        <%= f.submit "再登録",   class: "btn btn-primary js-event-create-btn" %>
      <% end %>
</div>    
<%= link_to group_events_path, class: 'btn btn-default' do %>
  スケジュール一覧に戻る
<% end %>